{
  "compilerOptions": {
    "target": "es6",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    },
    "lib": ["es6", "dom"]
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
